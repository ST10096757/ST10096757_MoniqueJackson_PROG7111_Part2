@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}


<h1 class="text-center">@ViewData["Title"]</h1>

<body class="background-image">

<div class="row justify-content-center">
    <div class="col-md-6">
        <section>
            <form id="account" method="post">
                <h2 class="text-center">Log in with your account</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email Address</label>
                    <input id="email" asp-for="Input.Email" class="form-control col-md-6" autocomplete="username" aria-required="true" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input id="password" asp-for="Input.Password" class="form-control col-md-6" autocomplete="current-password" aria-required="true" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="mb-3 form-check">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    <label class="form-check-label" for="rememberMe">Remember Me</label>
                </div>
                <div class="mb-3">
                    <div class="col d-flex justify-content-center">
                        <button id="login-submit" type="submit" class="w-50 btn btn-lg btn-success">Log in</button>
                    </div>
                </div>
            </form>
        </section>
    </div>
</div>
</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


