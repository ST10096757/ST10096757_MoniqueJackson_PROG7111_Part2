@model IEnumerable<ProductModel>

@{
    ViewData["Title"] = "Farmers";
}

<div class="card container">
    <h1 class="mt-5 mb-4">Filter Farmers</h1>

    <form method="get" asp-action="Index" class="mb-4">
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label for="category">Product Category:</label>
                    <select id="category" name="category" class="form-control">
                        <option value="">All Categories</option>
                        @foreach (var item in ViewBag.Categories)
                        {
                            <option value="@item.Value" selected="@item.Selected">@item.Text</option>
                        }
                    </select>
                </div>
                <div>
                    <label for="farmType">Farm Type:</label>
                    <select id="farmType" name="farmType" class="form-control">
                        <option value="">All Farm Types</option>
                        @foreach (var item in ViewBag.FarmTypes)
                        {
                            <option value="@item.Value" selected="@item.Selected">@item.Text</option>
                        }
                    </select>
                </div>
            </div>
            <div>
                <label for="startDate">Start Date:</label>
                <input type="date" id="startDate" name="startDate" value="@ViewBag.StartDate" />
            </div>
            <div>
                <label for="endDate">End Date:</label>
                <input type="date" id="endDate" name="endDate" value="@ViewBag.EndDate" />
            </div>
            <div class="col-md-4">
                <button class="btn btn-success btn-block" type="submit">Filter</button>
            </div>
        </div>
    </form>

    <br />

    <div class="table-responsive">
        <table class="table table-striped table-light">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Product Name</th>
                    <th scope="col">Production Date</th>
                    <th scope="col">Category</th>
                    <th scope="col">First Name</th>
                    <th scope="col">Last Name</th>
                    <th scope="col">Contact</th>
                    <th scope="col">Address</th>
                    <th scope="col">Farm Type</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>@product.Name</td>
                        <td>@product.ProductionDate?.ToString("yyyy-MM-dd")</td>
                        <td>@product.Category</td>
                        <td>@product.UserModel?.FirstName</td>
                        <td>@product.UserModel?.LastName</td>
                        <td>@product.UserModel?.Contact</td>
                        <td>@product.FarmerModel?.Address</td>
                        <td>@product.FarmerModel?.FarmType</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>